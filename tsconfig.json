{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "typedocOptions": {
    "entryPoints": ["src/{utils,services,lib,hooks}/**/*.{tsx,ts}"],
    "out": "./docs",
    "exclude": ["**/src/{utils,services,lib,hooks}/**/index.{tsx,ts}", "**/*test.*"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.setup.js",
    "jest.config.mjs"
  ],
  "exclude": ["node_modules", "src/gql"]
}
